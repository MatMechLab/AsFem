{
	"description":{
		"domain":"the size must be [0,1]",
		"bcs":"phi(0)=phi(1)=0"
	},
	"mesh":{
		"type":"asfem",
		"dim":1,
		"nx":20,
		"xmax":1.0,
		"meshtype":"edge2",
		"savemesh":true
	},
	"dofs":{
		"names":["phi"]
	},
	"elements":{
		"elmt1":{
			"type":"poisson",
			"dofs":["phi"],
			"material":{
				"type":"poisson1d-benchmark",
				"parameters":{
					"sigma":1.0,
					"a":2.0
				},
				"description":{
					"equation":"sigma*Lap(phi)=s",
					"source term":"s=1.0-a*x^2",
					"parameters":"c0=a/12-1/2, c1=0",
					"analytical solution":"phi=x^2/2-ax^4/12+c0*x+c1"
				}
			}
		}
	},
	"projection":{
		"type":"default",
		"scalarmate":["exactsolution"],
		"vectormate":["gradu"]
	},
	"bcs":{
		"fixed":{
			"type":"dirichlet",
			"dofs":["phi"],
			"bcvalue":0.0,
			"side":["left","right"]
		}
	},
	"linearsolver":{
		"type":"gmres",
		"preconditioner":"lu",
		"maxiters":10000,
		"tolerance":5.0e-7
	},
	"nlsolver":{
		"type":"newton",
		"maxiters":50,
		"abs-tolerance":5.0e-7,
		"rel-tolerance":5.0e-10,
		"s-tolerance":0.0
	},
	"output":{
		"type":"vtu",
		"interval":1
	},
	"qpoints":{
		"bulk":{
			"type":"gauss-legendre",
			"order":2
		}
	},
	"job":{
		"type":"static",
		"print":"dep"
	}
}